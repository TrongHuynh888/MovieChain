    minmax(220px, 1fr)
  ); /* T·ª± ƒë·ªông chia c·ªôt */
  gap: 25px;
  padding: 20px 0;
}

/* Th·∫ª Category Pro */
.category-card-pro {
  position: relative;
  height: 180px;
  border-radius: 20px;
  overflow: hidden;
  cursor: pointer;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); /* Hi·ªáu ·ª©ng n·∫£y */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

/* Hi·ªáu ·ª©ng khi r√™ chu·ªôt v√†o */
.category-card-pro:hover {
  transform: translateY(-10px) scale(1.02); /* Bay l√™n v√† ph√≥ng to nh·∫π */
  box-shadow: 0 20px 30px rgba(0, 0, 0, 0.5);
  z-index: 2;
}

/* L·ªõp ph·ªß ƒëen m·ªù ƒë·ªÉ ch·ªØ d·ªÖ ƒë·ªçc h∆°n */
.cat-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2); /* ƒêen m·ªù 20% */
  transition: background 0.3s;
}

.category-card-pro:hover .cat-overlay {
  background: rgba(0, 0, 0, 0.5); /* ƒê·∫≠m h∆°n khi hover */
}

/* N·ªôi dung b√™n trong */
.cat-content {
  position: relative;
  z-index: 1;
  color: #fff;
  width: 100%;
  padding: 20px;
}

/* Icon */
.cat-icon-box {
  font-size: 3rem;
  margin-bottom: 10px;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  transition: transform 0.3s;
}

.category-card-pro:hover .cat-icon-box {
  transform: scale(1.2) rotate(-10deg); /* Icon xoay nh·∫π khi hover */
}

/* Ti√™u ƒë·ªÅ */
.cat-title {
  font-family: "Orbitron", sans-serif;
  font-size: 1.4rem;
  font-weight: 700;
  margin: 0;
  text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* D√≤ng ch·ªØ "Kh√°m ph√° ngay" (·∫®n m·∫∑c ƒë·ªãnh, hi·ªán khi hover) */
.cat-subtitle {
  display: block;
  margin-top: 10px;
  font-size: 0.85rem;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.3s ease;
  font-weight: 500;
  color: var(--accent-color); /* M√†u v√†ng neon c·ªßa web */
}

.category-card-pro:hover .cat-subtitle {
  opacity: 1;
  transform: translateY(0);
}
/* =========================================
   STYLE CHO FOOTER TH·ªêNG K√ä (NEW)
   ========================================= */

/* 1. CƒÉn ƒë·ªÅu 4 c·ªôt */
.footer-content {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* Chia 4 c·ªôt ƒë·ªÅu nhau */
  gap: 30px;
  padding: 60px 0;
  max-width: 1200px;
  margin: 0 auto;
}

/* 2. Trang tr√≠ c·ªôt Th·ªëng k√™ */
.stats-box {
  background: rgba(255, 255, 255, 0.05);
  padding: 20px;
  border-radius: 15px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(5px);
}

.live-stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  padding-bottom: 8px;
  border-bottom: 1px dashed rgba(255, 255, 255, 0.1);
  font-size: 0.9rem;
}

.live-stat-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.stat-label {
  color: #aaa;
}

.stat-label i {
  width: 20px;
  color: var(--primary-color);
}

.stat-value {
  font-weight: bold;
  color: #fff;
  font-family: "Rajdhani", sans-serif;
  font-size: 1.1rem;
}

/* Hi·ªáu ·ª©ng nh·∫•p nh√°y cho s·ªë ng∆∞·ªùi online */
.stat-value.highlight {
  color: #00ff88; /* M√†u xanh neon */
  text-shadow: 0 0 10px rgba(0, 255, 136, 0.5);
  position: relative;
}

.stat-value.highlight::after {
  content: "";
  display: inline-block;
  width: 8px;
  height: 8px;
  background: #00ff88;
  border-radius: 50%;
  margin-left: 5px;
  animation: blink 1.5s infinite;
}

@keyframes blink {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.3;
  }
  100% {
    opacity: 1;
  }
}

/* Responsive: Tr√™n ƒëi·ªán tho·∫°i th√¨ v·ªÅ 1 c·ªôt */
@media (max-width: 768px) {
  .footer-content {
    grid-template-columns: 1fr; /* V·ªÅ 1 c·ªôt */
    text-align: center;
  }
  .stats-box {
    margin-top: 20px;
  }
}
